<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/style.css">
    <link rel="stylesheet" href="../public/main.css">
    <title>CRUD</title>
</head>
<body>
    <div class="container">
        <h1><%= title %></h1>
        <a href="/add" class="btn btn-sm btn-primary">Ajouter</a> <br> <br>
        
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Mobile</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% user.forEach(function(user){%>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.nom %></td>
                    <td><%= user.prenom %></td>
                    <td><%= user.mobile %></td>
                    <td>
                        <a href="edit/<%= user.id %>" class="btn btn-sm btn-warning">Modifier</a>
                        <a href="delete/<%= user.id %>" class="btn btn-sm btn-danger">Supprimer</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>